  </main>  <script>
    // Theme toggle: toggles body.light class and updates icon
    const themeToggle = document.getElementById('theme-toggle');
    const themeIcon = document.getElementById('theme-icon');
    function setIcon(){ themeIcon.textContent = document.body.classList.contains('light') ? '‚òÄ' : '‚òæ' }
    themeToggle.addEventListener('click', ()=>{ document.body.classList.toggle('light'); setIcon(); localStorage.setItem('theme', document.body.classList.contains('light') ? 'light' : 'dark') });
    // Persist theme
    if(localStorage.getItem('theme')==='light') document.body.classList.add('light'); setIcon();

    // Demo open stub
    function openDemo(){ alert('Demo launched (stub). Replace with actual demo link or modal.') }

    // Simple search highlighting of section titles
    const search = document.getElementById('site-search');
    search.addEventListener('input', ()=>{
      const q = search.value.toLowerCase().trim();
      document.querySelectorAll('section').forEach(s=>{
        const visible = !q || s.innerText.toLowerCase().includes(q);
        s.style.display = visible ? '' : 'none';
      })
    });

    // Progress animations when in view
    function animateProgress(){
      document.getElementById('progress-1').style.width='45%';
      document.getElementById('progress-2').style.width='72%';
      document.getElementById('launch-progress').style.width='60%';
    }
    window.addEventListener('load', ()=>{
      setTimeout(animateProgress,400);
      // simple scroll into view animation
      const els = document.querySelectorAll('[data-animate]');
      const obs = new IntersectionObserver((items)=>{
        items.forEach(i=>{ if(i.isIntersecting) i.target.classList.add('in') });
      },{threshold:0.12});
      els.forEach(e=>obs.observe(e));
    });

    // Helper: scroll to section
    function scrollToSection(id){ document.getElementById(id).scrollIntoView({behavior:'smooth'}) }

    // MEDIA: If you prefer video instead of image at hero, replace the #hero-media element in the HTML
    // Example lines inside file to edit directly (search for "MEDIA TEMPLATE"):
    //   <img id="hero-media" src="assets/images/hero.jpg" alt="Hero image" />
    //   OR
    //   <video id="hero-media" controls src="assets/videos/hero.mp4"></video>

    // If you want multiple image/video slots, use an array in JS and swap src values on demand.
  </script></body>
