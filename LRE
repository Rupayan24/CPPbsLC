<div class="category-buttons">
    <button onclick="showCategory('alphabet')">Alphabets</button>
    <button onclick="showCategory('numbers')">Numbers</button>
    <button onclick="showCategory('words')">Words</button>
</div>

<!-- Display Area -->
<div id="display-area" class="display-area">
    <p>Click a category above to view signs.</p>
</div>

<!-- Progress Section -->
<div class="progress-section">
    <h2>Your Progress</h2>
    <p id="progress-list">No signs viewed yet.</p>
    <button class="clear-btn" onclick="clearProgress()">Clear Progress</button>
</div>



<script>
/* ------------------------------------------- */
/*                JS START                     */
/* ------------------------------------------- */

// Dark mode
const modeBtn = document.querySelector(".mode-toggle");
modeBtn.addEventListener("click", () => {
    document.body.classList.toggle("dark");
    document.body.classList.toggle("light");

    modeBtn.textContent =
        document.body.classList.contains("dark") ? "‚òÄÔ∏è" : "üåô";
});

// images for clicking
const signs = {
    alphabet: {
        title: "Alphabet - K",
        img: "img/K.png"
    },
    numbers: {
        title: "Number - 1",
        img: "img/1.png"
    },
    words: {
        title: "Word - Hello",
        img: "img/hello.png"
    }
};

// Display category image
function showCategory(type) {
    let data = signs[type];

    document.getElementById("display-area").innerHTML = `
        <h2>${data.title}</h2>
        <img src="${data.img}" alt="${data.title}">
    `;

    saveProgress(data.title);
}

// Progress tracking
let progress = [];

function saveProgress(item) {
    if (!progress.includes(item)) {
        progress.push(item);
    }
    updateProgressUI();
}

function updateProgressUI() {
    const list = document.getElementById("progress-list");
    list.textContent = progress.length
        ? progress.join(", ")
        : "No signs viewed yet.";
}

function clearProgress() {
    progress = [];
    updateProgressUI();
}

/* ------------------------------------------- */
/*                JS END                       */
/* ------------------------------------------- */
</script>

